pipeline {
    agent any
    stages {
        stage('Checkout Code') {
            steps {
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: 'refs/heads/main']],
                    userRemoteConfigs: [[
                        url: 'https://github.com/rakeshranade/Edureka-IGP1.git'
                    ]]
                ])
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    // Build the Docker image using the Dockerfile in the current directory
                    sh "docker build -f .docker/igp1.dockerfile -t edureka-igp1:${env.BUILD_NUMBER} --build-arg PROJECT=Edureka-IGP/src/Edureka-IGP/Edureka-IGP.sln ."
                }
            }
        }
    }
}